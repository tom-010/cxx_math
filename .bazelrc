build --action_env=BAZEL_CXXOPTS="-std=c++20:-Wall"
build --action_env=BAZEL_LINKOPTS=""
build --repo_env=CC=clang
build --repo_env=CXX=clang++

build:test --strip=never
build:test --copt -fsanitize=address,undefined
build:test --linkopt -fsanitize=address,undefined
build:test --copt -O1
build:test --copt -g
build:test --copt -fno-omit-frame-pointer
